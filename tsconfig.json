{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "enums/*": [
        "src/enums/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
    },
    "target": "ES5",
    "module": "CommonJS",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "src-calculator/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}